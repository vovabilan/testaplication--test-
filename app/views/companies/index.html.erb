<table>
  <tr>
    <th> <%= t(".company_name") %></th>
    <th>&nbsp;</th>
  </tr>

  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td>
        <%= link_to t(".i_show"), company_path(company) %>
