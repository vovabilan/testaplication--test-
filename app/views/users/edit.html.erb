<h1> t("edit_user")</h1>

<%= semantic_form_for(@user) do |f| %>

  <%= f.input :firstname, :label => t("first_name") %>
  <%= f.input :lastname, :label => t("last_name") %>
  <%= f.input :email, :as => :email, :label => t("email") %>

  <%= f.action :submit, :as => :button %>
  <%= f.action :cancel, :as => :link, :label => 'Back' %>
<% end %>