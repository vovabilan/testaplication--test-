<h1> <%= t(".edit_user", model: @user.class.name.downcase) %></h1>

<%= semantic_form_for(@user) do |f| %>

  <%= f.input :firstname, :label => t("first_name") %>
  <%= f.input :lastname, :label => t("last_name") %>
  <%= f.input :email, :as => :email, :label => t("email") %>

  select("company", "category", {:include_blank => true})
  <select name="company[category]">
    <option value="">None</option>
    <option value="1"></option>

  </select>

  <%= f.action :submit, :as => :button %>
  <%= f.action :cancel, :as => :link, :label => t(".back") %>
<% end %>