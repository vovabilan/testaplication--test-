<!DOCTYPE html>
<html>
<head>
  <title>Authentication</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    Logged in as <%= current_user.email %>. <%= link_to t("log-out"), session_path, :method => :delete %>
  <% else %>
    <%= link_to t("sign-up"), new_user_path %> or <%= link_to t("log-in"), new_session_path %>
  <% end %>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, id: "flash_#{name}" %>
  <% end %>
  <%= yield %>

</body>
</html>
