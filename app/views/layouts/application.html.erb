<!DOCTYPE html>
<html>
<head>
  <title>Testaplication</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= link_to t("company"), companies_path if is_supper_admin? %>
  <%= link_to t("post"), posts_path %>
  <%= link_to t("category"), categories_path if is_supper_admin? %>

  <% if current_user %>
    <%= image_tag current_user.avatar.url(:medium) if current_user.avatar %>
    <%= current_user.email %>.
    <%= link_to t("logged-out"), session_path, :method => :delete %>
  <% end %>
  
  <%= yield %>

</body>
</html>
