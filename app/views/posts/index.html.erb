<h1> <%= t(".post_posts") %> </h1>

<table>
  <tr>
    <th> <%= t(".post_name") %></th>
    <th>&nbsp;</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td>
        <%= link_to t(".i_show"), post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, confirm: 'are you sure?', method: :delete %>
       
      </td>
    </tr>
  <% end %>
</table>
 <%= will_paginate @posts %>
<br />

<%= link_to 'New post', new_post_path %>